//#define  _CRT_SECURE_NO_WARNINGS
#include  <stdio.h>
#include  <stdlib.h>

  int  removeElement(int*  nums,    int  numsLength,  int  val){

      int i=numsLength,j=i-1,*temp;
      while(i>0){

          if(*nums==val){
                temp=nums;
              while(j){
                  
                    *temp=*(temp+1);
                    temp++;
                    j--;
              }
              numsLength--;
          }
          else nums++;
          i--;
      }
      return numsLength;

}

int  main  (int  argc,  char**  argv)            //  sample  input:  3  3  2  2  3（第1个3为删除的val值）
{
        int  nums[100],  val;
//  initialization
      val  =  atoi(argv[1]);
      for(int  i=2;  i<argc;  i++)
        {  
              nums[i-2]  =  atoi(argv[i]);
        }
//  nums  是以“引用”方式传递的。也就是说，不对实参作任何拷贝
      int  len  =  removeElement(nums,    argc  -  2,    val);

//  根据你的函数返回的长度,  它会打印出数组中  该长度范围内  的所有元素。
      for  (int  i  =  0;  i  <  len;  i++)  {
            printf("%d  ",nums[i]);
        }  

        return  EXIT_SUCCESS;
}